<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="730dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:alpha=".1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/umatter_logocrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMood"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Mood"
                android:textSize="15sp"
                app:backgroundTint="#69FB00"
                app:icon="@drawable/ic_mood"
                 />

            <Button
                android:id="@+id/btnQuote"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Quotes"
                android:textSize="15sp"
                app:backgroundTint="#673AB7"
                app:icon="@drawable/ic_quote"
                app:iconSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Profile"
                android:textSize="15sp"
                app:backgroundTint="#00F6B2"
                app:icon="@drawable/ic_profile"
                app:iconSize="40dp" />

            <Button
                android:id="@+id/btnCalendar"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Mood Calendar"
                android:textSize="15sp"
                app:backgroundTint="#E0E611"
                app:icon="@drawable/ic_calendar"
                app:iconSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDevs"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="About"
                android:textSize="15sp"
                app:backgroundTint="#FF00A2"
                app:icon="@drawable/ic_devs"
                app:iconSize="40dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Logout"
                android:textSize="15sp"
                app:backgroundTint="#878787"
                app:icon="@drawable/ic_logout"
                app:iconSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="429dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHotlines"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="HOTLINES"
                android:textSize="24sp"
                app:backgroundTint="#FF0000"
                app:icon="@drawable/ic_call"
                app:iconSize="40dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>